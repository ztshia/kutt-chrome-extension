{
  "manifest_version": 3,
  "name": "Kutt.it 链接管理器",
  "version": "1.0.0",
  "description": "直接在浏览器中创建和管理Kutt.it短链接，支持自定义后缀、删除链接等功能",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kutt.it 链接管理器",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "clipboardWrite",
    "tabs",
    "scripting",
    "contextMenus",
    "activeTab"
  ],
  "commands": {
    "shorten-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "为当前标签页创建Kutt短链接"
    }
  },
  "host_permissions": ["https://*/api/*", "http://*/api/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}